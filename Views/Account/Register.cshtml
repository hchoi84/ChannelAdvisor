@model RegisterViewModel

@{
  ViewBag.Title = "Register";
}

<div class="container">
  <form asp-controller="Account" asp-action="Register" method="POST">
    <div class="form-row">
      <div class="form-group col-md-6">
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName" class="form-control" placeholder="First Name">
        <span class="text-dagner" asp-validation-for="FirstName"></span>
      </div>
      <div class="form-group col-md-6">
        <label asp-for="LastName"></label>
        <input asp-for="LastName" class="form-control" placeholder="Last Name">
        <span class="text-danger" asp-validation-for="LastName"></span>
      </div>
    </div>

    <div class="form-row">
      <div class="form-group col-md-6">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" placeholder="Email">
        <span class="text-danger" asp-validation-for="Email"></span>
      </div>
      <div class="form-group col-md-6">
        <label asp-for="OfficeLocation"></label>
        <Select asp-for="OfficeLocation" class="form-control" asp-items="Html.GetEnumSelectList<OfficeLocation>()">
          <option value="">Please Select</option>
        </Select>
      </div>
    </div>

    <div class="form-row">
      <div class="form-group col-md-6">
        <label asp-for="Password"></label>
        <input asp-for="Password" class="form-control" placeholder="Email">
        <span class="text-danger" asp-validation-for="Password"></span>
      </div>
      <div class="form-group col-md-6">
        <label asp-for="PasswordConfirm"></label>
        <input asp-for="PasswordConfirm" class="form-control" placeholder="Password">
        <span class="text-danger" asp-validation-for="PasswordConfirm"></span>
      </div>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</div>