@model UserEditViewModel
@{ 
  ViewBag.Title = "User";
  string joined = Model.GolfioUser.Created.ToString("yyyy/MM/dd");
}

<div class="container">
  <div class="form-group row">
    <label asp-for="@Model.GolfioUser.FullName" class="col-sm-2 col-form-label"></label>
    <div class="col-sm-10">
      <input readonly asp-for="@Model.GolfioUser.FullName" class="form-control" style="background-color: transparent; color: #fff;">
    </div>
  </div>
  <div class="form-group row">
    <label asp-for="@Model.GolfioUser.Email" class="col-sm-2 col-form-label"></label>
    <div class="col-sm-10">
      <input readonly asp-for="@Model.GolfioUser.Email" class="form-control" style="background-color: transparent; color: #fff;">
    </div>
  </div>
  <div class="form-group row">
    <label class="col-sm-2 col-form-label">Joined</label>
    <div class="col-sm-10">
      <input readonly value="@joined" class="form-control" style="background-color: transparent; color: #fff;">
    </div>
  </div>
  <div class="form-group row">
    <label class="col-sm-2 col-form-label">Granted Access(es)</label>
    <div class="col-sm-10">
      <input readonly value="@Model.UserClaims" class="form-control" style="background-color: transparent; color: #fff;">
    </div>
  </div>

  <form asp-action="ChangePassword" method="POST" class="mt-5">
    <input type="hidden" asp-for="@Model.GolfioUser.Id">
    <div class="form-group">
      <label asp-for="@Model.OldPassword"></label>
      <span asp-validation-for="@Model.OldPassword" class="text-danger"></span>
      <input asp-for="@Model.OldPassword" class="form-control">
    </div>
    <div class="form-group">
      <label asp-for="@Model.NewPassword"></label>
      <span asp-validation-for="@Model.NewPassword" class="text-danger"></span>
      <input asp-for="@Model.NewPassword" class="form-control">
    </div>
    <div class="form-group">
      <label asp-for="@Model.NewConfirmPassword"></label>
      <span asp-validation-for="@Model.NewConfirmPassword" class="text-danger"></span>
      <input asp-for="@Model.NewConfirmPassword" class="form-control">
    </div>
    <button type="submit" class="btn btn-primary">Update Password</button>
    <p class="text-info">@TempData["ChangePassword"]</p>
  </form>
</div>